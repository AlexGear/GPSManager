<Window x:Class="GPSManager.PolygonNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPSManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Присвоение имени полигону" Height="135.5" Width="403">
    <Grid FocusManager.FocusedElement="{Binding ElementName=nameTextBox}">
        <TextBlock Margin="10,10,0,0" TextWrapping="Wrap" Text="Имя полигона" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="nameTextBox" Height="23" Margin="10,31,10,0" TextWrapping="Wrap" VerticalAlignment="Top" KeyDown="NameTextBox_KeyDown"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="OkButton_Click"/>

    </Grid>
</Window>
